{
  "manifest_version": 3,
  "name": "LinguaContext - Immersive English Learning",
  "version": "0.1.0",
  "description": "Context-aware English learning assistant.",
  "permissions": [
    "storage",
    "identity",
    "offscreen"
  ],
  "host_permissions": [
    "https://dashscope.aliyuncs.com/*",
    "https://openspeech.bytedance.com/*"
  ],
  "oauth2": {
    "client_id": "269309597340-hvjgb712pqg3d9ij6tms1d018kn722je.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.js"],
      "css": ["src/content/styles.css"]
    }
  ],
  "action": {
    "default_title": "LinguaContext"
  },
  "key": ""
}
